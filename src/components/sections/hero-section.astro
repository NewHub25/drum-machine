---
// Import the necessary dependencies
import { Image } from "astro:assets";
import PrimaryCTA from "@components/ui/buttons/primary-cta.astro";
import AvatarsComponent from "@components/ui/avatars-component.astro";
import heroImage from "@images/hero-drum.jpg";
import Brandlogo from "@components/ui/brandlogo.astro";
import ImgSvg from "@icons/icon.svg";

const { title, subTitle, textBtn, avatars, src } = Astro.props;

interface Props {
  title: string;
  subTitle?: string;
  textBtn: string;
  avatars?: Array<string>;
  src?: any;
}
---

<!-- Defining a grid container that holds all the content -->
<section
  class="mx-auto grid max-w-[85rem] gap-4 px-4 py-14 sm:px-6 md:grid-cols-2 md:items-center md:gap-8 lg:px-8 2xl:max-w-full"
>
  <!-- Title and description -->
  <div>
    <!-- Each h1 and p tag renders a portion of the title and subTitle defined above -->
    <h1
      class="block text-balance text-3xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 sm:text-4xl lg:text-6xl lg:leading-tight"
    >
      <!-- About Fragment: https://docs.astro.build/en/basics/astro-syntax/#fragments -->
      <Brandlogo />
      <!-- <Image src={ImgSvg} alt='img svg' class='svg_svg' /> -->
      <Fragment set:html={title} />
    </h1>
    {
      subTitle && (
        <p class="mt-3 text-pretty text-lg leading-relaxed text-neutral-700 dark:text-neutral-400 lg:w-4/5">
          {subTitle}
        </p>
      )
    }
    <!-- Button to start -->
    <div class="mt-7 grid w-full gap-3 sm:inline-flex">
      <PrimaryCTA text={textBtn} />
    </div>
    <!-- Avatars section -->
    <AvatarsComponent avatars={avatars} />
  </div>
  <!-- Hero Image Section -->
  <div class="flex w-full">
    <div class="top-12 overflow-hidden blur">
      <Image
        src={heroImage}
        alt="Temporal Image"
        class="h-full w-full scale-110 object-cover object-center"
        draggable={"false"}
        loading={"eager"}
        format={"avif"}
      />
    </div>
  </div>
</section>
